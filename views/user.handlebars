<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>Minimalist Journal</h1>
        <h3>Sign Up Page</h3>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="first-name">First Name</label>
            <input type="text" id="first-name" class="form-control" aria-describedby="example-text" placeholder="First Name">
          </div>
          <div class="form-group">
            <label for="last-name">Last Name</label>
            <input type="text" id="last-name" class="form-control" aria-describedby="example-text" placeholder="Last Name">
          </div>
          <div class="form-group">
            <label for="birthday">Date of Birth</label>
            <input type="date" id="birthday" class="form-control" aria-describedby="example-text">
          </div>
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" class="form-control" aria-describedby="example-text" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <textarea class="form-control" id="password" aria-describedby="example-description" placeholder="Password"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
    
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/blog.js"></script>
